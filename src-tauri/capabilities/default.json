{
  "identifier": "default",
  "description": "Default permissions for the bot.",
  "local": true,
  "windows": [
    "main"
  ],
  "platforms": [
    "macOS",
    "windows"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "shell:allow-open",
    "shell:default",
    "updater:default",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APP/*"
      ]
    }
  ]
}